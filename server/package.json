{
  "name": "path-of-heroes-server",
  "version": "1.0.0",
  "description": "Backend server for Path of Heroes multiplayer game",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "pocketbase": "pocketbase serve --http=127.0.0.1:8090",
    "generate-pocket-types": "npx pocketbase-typegen --db ../server/pb_data/data.db --out ../db-types/pocketbase-types.ts"
  },
  "keywords": [
    "pocketbase",
    "express",
    "multiplayer",
    "game"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pocketbase": "^0.21.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
